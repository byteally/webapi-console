name:                webapi-console
version:             0.1.0.0
synopsis:            Api Console for webapi project
-- description:         
homepage:            https://github.com/byteally/webapi
license:             BSD3
license-file:        LICENSE
author:              Magesh B, Sree Nidhi, Tarun Joshi
maintainer:          magesh85@gmail.com, nairsreenidhi@gmail.com, tjjoshi7@gmail.com
copyright:           Â© 2016 ByteAlly
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10
data-files:          css/main.css
                   , js/script.js
data-dir:            static

library
  hs-source-dirs:      src
  ghc-options:         -Wall
  exposed-modules:     WebApi.Console
                     , WebApi.PageTemplate
  other-modules:       Reflex.Utils
  build-depends:       base >= 4.7 && < 5
                     , ghcjs-base
                     , ghcjs-prim
                     , reflex       == 0.4.*
                     , reflex-dom   == 0.3.*                     
                     , ghcjs-dom    == 0.2.*
                     , webapi       == 0.2.*
                     , text         >=1.2 && <1.3
                     , network-uri  == 2.6.*
                     , http-types   == 0.8.*
                     , bytestring   >=0.10 && <0.11
                     , vector       >=0.10 && < 0.12
                     , aeson        >=0.8 && <0.10
                     , containers   >=0.5 && <0.6
                     , transformers == 0.4.*
                     , lens         == 4.13.*
  default-language:    Haskell2010

executable webapi-console-test
  hs-source-dirs:      tests
  main-is:             Main.hs
  ghc-options:         -Wall
  build-depends:       base
                     , ghcjs-base
                     , webapi-console
                     , webapi      == 0.2.*
                     , text        >=1.2 && <1.3
                     , network-uri == 2.6.*
                     , http-types  == 0.8.*
                     , bytestring  >=0.10 && <0.11
                     , vector      >=0.10 && < 0.12
                     , aeson       >=0.8 && <0.10
                     , containers  >=0.5 && <0.6
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/byteally/webapi-console
